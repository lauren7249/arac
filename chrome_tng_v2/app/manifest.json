{
    "name": "AC Browser",
    "description": "Earn money while this app browses in the background.",
    "version": "0.0.5.0",
    "manifest_version": 2,
    "update_url":"https://ac-extension.mybluemix.net/updates.xml",
    "icons": {
        "128": "images/icon.png"
    },
    // "content_scripts": [
    //   {
    //     "matches": ["https://www.linkedin.com/*"],
    //     // "css": ["mygooglestyles.css"],
    //     "js": ["./scripts/app.js"]
    //   }
    // ],      
    "background": {
        //        "page": "index.html",
        "persistent": false,
        "icon": "images/icon.png",
        "scripts": [
            "./scripts/app.js"
        ]
    },
    "browser_action": {
        "default_icon": "images/icon.png",
        "default_title": "AC Browser"
        // ,"default_popup": "index.html"
    },       
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "content_security_policy": "script-src 'self' https://cdnjs.cloudflare.com; object-src 'self';",
    "permissions": [
        "<all_urls>",
        "activeTab",
        "background",
        "storage",
        "tabs",
        "webNavigation",
        "cookies",
        "https://www.linkedin.com/"
    ],
    "optional_permissions": [
        "idle",
        "notifications"
    ],
    "incognito": "split"
}
